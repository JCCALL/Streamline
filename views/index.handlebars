<div class="container-fluid p-0">
    <div class="line-animate"></div>
    <div class="container main-container">
        <div id="headTitle" class="py-5 heading">
            <h1 class="title">StreamLine</h1>

            <!--<h4>Sit on your ass less! Find your shows faster!</h4>-->
            <h4>Sit on your ass. Find your shows fast.</h4>
            <!--<h4>Browse Less. Watch More.</h4>
            <small>(these are all tagline ideas)</small>-->
        </div>

        <!-- This form will be where users input data about the movies -->
        <div class="search-bar-wrap">
            <div class="search-bar">
                <input class="search" type="text" id="movie-input" placeholder="Search for a movie" name="search">

                <!-- This button will trigger our AJAX call -->
                <button class="searchButton" id="find-movie" type="submit" value="Search"><i class="fa fa-search"></i>
                </button>
            </div>
        </div>

        <!-- <div class="search-bar">
            <form id="movie-form" action="POST">
                <label class="search-text" for="movie-input">Search for a movie</label>
                <input class="mx-2 search" type="text" id="movie-input" name="search"> -->

            <!-- This button will trigger our AJAX call -->
            <!-- <input class="btn btn-primary" id="find-movie" type="submit" value="Search">
            </form>
        </div> -->

        <div id="headLogin">

            <!-- Button trigger login modal -->
            <a href="/login"><button class="btn btn-primary mr-2 login">
                    Login
                </button></a>

            <!-- Button trigger register modal -->
            <a href="/newuser"><button class="btn btn-primary mr-2 login">
                    Register
                </button>
        </div>

        <!-- Login Modal -->
        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="loginModalLabel">Login</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <label for="uname"><b>Username</b></label>
                            <input type="text" placeholder="Enter Username" name="uname" required>
                            <br>

                            <label for="psw"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="psw" required>
                            <br>

                            <button type="submit">Login</button>
                            <label>
                                <input type="checkbox" checked="checked" name="remember"> Remember me
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Register Modal -->
        <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="registerModalLabel">Login</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <h1>Sign Up</h1>
                            <p>Please fill in this form to create an account.</p>
                            <hr>
                            <label for="email"><b>Email</b></label>
                            <input type="text" placeholder="Enter Email" name="email" required>
                            <br>

                            <label for="psw"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="psw" required>
                            <br>
                            <label for="psw-repeat"><b>Repeat Password</b></label>
                            <input type="password" placeholder="Repeat Password" name="psw-repeat" required>
                            <br>
                            <label>
                                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px">
                                Remember me
                            </label>

                            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms &
                                    Privacy</a>.</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Register Now</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab section -->
        <div class="tab mt-5">
            <button class="tablinks" onclick="openTabs(event, 'Default')"><i class="fa fa-home"
                    aria-hidden="true"></i></button>
            <button class="tablinks" onclick="openTabs(event, 'Watchlist')">Watchlist</button>
            <button class="tablinks" onclick="openTabs(event, 'Favorites')">Loved</button>
            <button class="tablinks" onclick="openTabs(event, 'Watched')">Watched</button>
        </div>

        <div id="Watchlist" class="tabcontent">
            {{!-- {{#each Streamlines}}
            {{#unless watched}}
            <div class="watch-list">
                <img class="watch-picture img-fluid" src="{{image}}">
                {{movie}}
            </div>
            <div class="">
                <button class="change-watch btn btn-primary" data-id="{{id}}" data-neweat="true">
                    Watched
                </button>
            </div>
            {{/unless}}
            {{/each}} --}}
            {{#each movies}}
            {{#unless this.dataValues.watched}}
                <li data-id="{{this.dataValues.id}}" class="list-group-item">
                    <h4>{{this.dataValues.movie}}</h4>
                    <img class="watch-picture img-fluid" src="{{this.dataValues.image}}">
                    <button class="btn btn-primary float-right delete">ï½˜</button>
                    <button class="change-watch btn btn-primary" data-id="{{id}}" data-neweat="true">
                    Watched
                </button>
                </li>
            {{/unless}}
            {{/each}}
        </div>

        <div id="Favorites" class="tabcontent">
            <h3>My Favorites!</h3>
            <p>List of Favorited Movies/Shows</p>
        </div>

        <div id="Watched" class="tabcontent">
            <h3>Everything from my Watchlist that I have Watched!</h3>
            <p>List of Watched Movies/Shows.</p>
        </div>

        <div id="Default" class="tabcontent show-content">
            <div class="row">
                <div class="col-md-6">
                    <div class="image-animate"></div>
                </div>
                <div class="col-md-6 text-center my-auto">
                    <div class="py-4 py-md-0">
                        <h3 class="pb-3 pt-3 pt-sm-0">Browse Less.<br>
                            Watch More.</h3>
                        <p>Welcome to StreamLine, your one-stop resource for finding where your favorite movies and
                            shows are available to watch online. Create an account and start adding to your watchlist
                            today!</p>
                    </div>
                    <div class="tic-tac">
                        <div class="row">
                            <div class="col-6 steps step-1">
                                <i class="fa step-icon fa-check-square-o" aria-hidden="true"></i>
                                <h5>
                                    Create Your Account
                                </h5>
                            </div>
                            <div class="col-6 steps step-2">
                                <i class="fa step-icon fa-search" aria-hidden="true"></i>
                                <h5>
                                    Find Movies & Shows
                                </h5>
                            </div>
                            <div class="col-6 steps step-3">
                                <i class="fa step-icon fa-play-circle" aria-hidden="true"></i>
                                <h5>
                                    Add to Watchlist
                                </h5>
                            </div>
                            <div class="col-6 steps step-4">
                                <i class="fa step-icon fa-heart-o" aria-hidden="true"></i>
                                <h5>
                                    Save to Favorites
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Movie results -->
        <div class="row movie-view" id="movie-view"></div>

        <!-- Movie Modal -->
        <div class="modal fade" id="movieModal" tabindex="-1" role="dialog" aria-labelledby="movieModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="loginModalLabel"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Add to Watchlist</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Modal div-->
        <div id="modal-create"></div>
    </div>
</div>
